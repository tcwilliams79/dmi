{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://dmianalysis.org/schemas/output_contract.schema.json",
  "title": "DMI Output Contract",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "contract_id": {
      "type": "string"
    },
    "version": {
      "type": "string"
    },
    "last_updated": {
      "type": "string"
    },
    "purpose": {
      "type": "string"
    },
    "principles": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "directories": {
      "type": "object",
      "additionalProperties": true
    },
    "grouping_conventions": {
      "type": "object",
      "additionalProperties": true
    },
    "published_artifacts": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "artifact_id": {
            "type": "string"
          },
          "relative_path": {
            "type": "string"
          },
          "format": {
            "type": "string",
            "enum": [
              "json",
              "csv",
              "parquet",
              "md"
            ]
          },
          "schema_ref": {
            "type": [
              "string",
              "null"
            ]
          },
          "required": {
            "type": "boolean"
          },
          "description": {
            "type": "string"
          }
        },
        "required": [
          "artifact_id",
          "relative_path",
          "format",
          "required"
        ]
      }
    },
    "published_aliases": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": true
      }
    },
    "internal_review_artifacts": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": true
      }
    },
    "deployment_guidance": {
      "type": "object",
      "additionalProperties": true
    }
  },
  "required": [
    "contract_id",
    "version",
    "last_updated",
    "directories",
    "published_artifacts"
  ]
}